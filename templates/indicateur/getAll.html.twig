{% extends 'home.html.twig' %}
{% block title %}
    Liste des Indicateurs
{% endblock %}
{% block body %}
    <table class="table table-bordered table-responsive-md">
        <tr>
            <th>Identifiant</th>
            <th>Libelle</th>
            <th>Action</th>
            <th>Action</th>
        </tr>
        {% for i in indicateurs  %}
            <tr>
                <td>{{ i.id }}</td>
                <td>{{ i.libelle}}</td>
                <td><a href="{{ path('indicateur_update', { 'id': i.id }) }}" class="btn btn-success form-group">Update</a></td>
                <td><a href="{{ path('indicateur_delete', { 'id': i.id }) }}" class="btn btn-danger form-group" onclick="return confirm('Voulez-vous supprimer?');">Delete</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}